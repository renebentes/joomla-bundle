<snippet>
	<content><![CDATA[/**
 * Get a list of the ${1:hello} for filtering.
 *
 * @return  array  An array of JHtmlOption elements.
 *
 * @since   ${2:${TM_VERSION}}
 */
public static function get${1/(.+)/\u\1/g}Options()
{
	// Build the filter options.
	\$options = array();

	\$options[] = JHtml::_('select.option', '0', JText::_('COM_${3:${TM_PROJECT/(.+)/\U\1/g}}_OPTION_${1/(.+)/\U\1/g}'));

	return \$options;
}]]></content>
	<tabTrigger>jadminhelperoptionscustom</tabTrigger>
</snippet>
